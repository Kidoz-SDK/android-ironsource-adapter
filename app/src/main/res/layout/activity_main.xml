<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/banner_footer">

            <RelativeLayout
                android:id="@+id/ironSourceMediationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ironSourceLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/logo_small" />

                <LinearLayout
                    android:id="@+id/ironSourceInterstitialContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ironSourceLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ironSource_is_load_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:text="Load ironSource\nInterstitial" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/ironSource_is_show_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Show ironSource\nInterstitial" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kidozDirectContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ironSourceMediationContainer">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/kidoz_logo" />

                <Button
                    android:id="@+id/init_sdk_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_alignLeft="@+id/rewardedContainer"
                    android:layout_alignRight="@+id/rewardedContainer"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ironsource_button_shape"
                    android:text="Init Kidoz SDK" />

                <LinearLayout
                    android:id="@+id/rewardedContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/init_sdk_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rw_load_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Load\nRewarded" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/rw_show_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Show\nRewarded" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/interstitialContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_below="@+id/rewardedContainer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/is_load_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Load\nInterstitial" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/is_show_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Show\nInterstitial" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bannerButtonsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/interstitialContainer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/banner_load_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Load\nBanner" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/banner_show_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ironsource_button_shape"
                        android:enabled="false"
                        android:text="Show\nBanner" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/banner_footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>